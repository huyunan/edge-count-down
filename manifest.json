{
  "manifest_version": 3,
  "name": "定时提醒",
  "version": "1.0.1",
  "description": "添加倒计时事件，到时间后进行提醒，可以设置定时提醒喝水，不要久坐等。",
  "author": "huyunan",
  "default_locale": "zh_CN",
  "homepage_url": "https://github.com/huyunan",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png",
      "48": "icons/icon48.png",
      "32": "icons/icon32.png",
      "16": "icons/icon16.png"
    },
    "default_title": "定时提醒"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "icons/icon128.png",
    "48": "icons/icon48.png",
    "32": "icons/icon32.png",
    "16": "icons/icon16.png"
  },
  "update_url": "https://edge.microsoft.com/extensionwebstorebase/v1/crx"
} 